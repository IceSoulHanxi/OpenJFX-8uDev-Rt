<?xml version="1.0" encoding="UTF-8"?>

<project name="rt-tests-glass" default="test" basedir=".">

    <description>Functional tests for JavaFX runtime, Glass</description>

    <import file="../../../build-defs.xml"/>

    <target name="default" depends="test"/>

    <target name="jar">
        <ant antfile="ExceptionHandler/build.xml" target="jar" inheritAll="false"/>
    </target>

    <target name="test" depends="jar,-smoke-test,-extra-test"/>

    <!-- Smoke tests that are run for both test and full-test targets -->
    <target name="-smoke-test">
    </target>

    <!-- Extra tests that are run only for full-test target -->
    <target name="-extra-test" if="is-full-test">
        <!-- ExceptionHandler test should be moved to -smoke-test once
             Thread.UncaughtExceptionHandler is used on all the platforms -->
        <ant antfile="ExceptionHandler/build.xml" target="test" inheritAll="false"/>
    </target>

    <target name="clean">
        <ant antfile="ExceptionHandler/build.xml" target="clean" inheritAll="false"/>
    </target>

</project>
