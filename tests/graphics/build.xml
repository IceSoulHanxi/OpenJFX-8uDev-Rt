<?xml version="1.0" encoding="UTF-8"?>
<project name="rt-closed-tests" default="test" basedir=".">

    <description>Functional tests for rt-closed</description>

    <import file="../../../build-defs.xml"/>

    <target name="default" depends="test"/>

    <target name="jar">
        <ant antfile="MaterialTests/build.xml" target="jar" inheritAll="false"/>
        <ant antfile="SnapshotTests/build.xml" target="jar" inheritAll="false"/>
        <ant antfile="SwingInterop/build.xml" target="jar" inheritAll="false"/>
        <ant antfile="TextTests/build.xml" target="jar" inheritAll="false"/>
    </target>

    <target name="test" depends="jar,-smoke-test,-extra-test">
    </target>

    <!-- Smoke tests that are run for both test and full-test targets -->
    <target name="-smoke-test">
    </target>

    <!-- Extra tests that are run only for full-test target -->
    <target name="-extra-test" if="is-full-test">
        <ant antfile="MaterialTests/build.xml" target="test" inheritAll="false"/>
        <ant antfile="SnapshotTests/build.xml" target="test" inheritAll="false"/>
        <ant antfile="SwingInterop/build.xml" target="test" inheritAll="false"/>
        <ant antfile="TextTests/build.xml" target="test" inheritAll="false"/>
    </target>

    <target name="clean">
        <ant antfile="MaterialTests/build.xml" target="clean" inheritAll="false"/>
        <ant antfile="SnapshotTests/build.xml" target="clean" inheritAll="false"/>
        <ant antfile="SwingInterop/build.xml" target="clean" inheritAll="false"/>
        <ant antfile="TextTests/build.xml" target="clean" inheritAll="false"/>
    </target>

</project>
