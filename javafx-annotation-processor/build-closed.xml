<?xml version="1.0" encoding="UTF-8"?>
<project name="javafx-annotation-processor" default="jar" basedir=".">
    <description>Builds, tests, and jars the closed version of the javafx-annotation-processor project.</description>
    
    <property name="runtime.dist.root.dir" value="../../rt-closed" />    
    <property name="rt.dist.root.dir" value="../../rt" />    
    <path id="javac.closed.classpath.path" path="
        ${import.javac.jar}:
        ${runtime.dist.root.dir}/javafx-beans/dist/javafx-beans.jar:
        ${rt.dist.root.dir}/javafx-common/dist/javafx-common.jar" />
    <property name="javac.classpath" refid="javac.closed.classpath.path"/>
    
    <import file="../build-defs.xml"/>
    <import file="build-common.xml"/>

    <target name="jar" depends="javafx-annotation-processor-common.jar"/>
    <target name="functional-test" depends="javafx-annotation-processor-common.functional-test"/>
</project>
