<?xml version="1.0" encoding="UTF-8"?>
<project name="javafx-iio" default="all" basedir=".">

  <target name="compile-native">
    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="JFXIIO_CP=${jfxiio.classes.dir}"/>
      <arg value="JDK_HOME=${platform.home}"/>
      <arg value="IS_IOS=true"/>
      <arg value="IOS_ARCH=armv7"/>
      <arg value="IOS_PLATFORM=iPhoneOS"/>
      <arg value="IOS_VERSION=${ios.version}"/>
      <arg value="CONF=${build.conf}"/>
      <arg value="all"/>
    </exec>

    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="JFXIIO_CP=${jfxiio.classes.dir}"/>
      <arg value="JDK_HOME=${platform.home}"/>
      <arg value="IS_IOS=true"/>
      <arg value="IOS_ARCH=i386"/>
      <arg value="IOS_PLATFORM=iPhoneSimulator"/>
      <arg value="IOS_VERSION=${ios.version}"/>
      <arg value="CONF=${build.conf}"/>
      <arg value="all"/>
    </exec>

    <exec executable="lipo" dir="../javafx-iio-native" failonerror="true">
      <arg value="-create"/>
      <arg value="-output"/>
      <arg value="${native.dist.dir}/libjavafx-iio.a"/>
      <arg value="${native.dist.dir}/libjavafx-iio-armv7.a"/>
      <arg value="${native.dist.dir}/libjavafx-iio-i386.a"/>
    </exec>
  </target>

  <target name="clean-native">
    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="clean"/>
    </exec>
  </target>

</project>
