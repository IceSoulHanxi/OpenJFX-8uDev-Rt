<?xml version="1.0" encoding="UTF-8"?>
<project name="javafx-iio" default="all" basedir=".">

  <target name="compile-native-cross" if="cross.platform" >
    <fail unless="cross.rt.iio.cflags" message="Missing cross.rt.iio.cflags definition"/>
    <fail unless="cross.rt.iio.ldflags" message="Missing cross.rt.iio.ldflags definition"/>
    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="JDK_HOME=${platform.home}"/>
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="JFXIIO_CP=${jfxiio.classes.dir}"/>
      <arg value="CC=${crosstools.gcc} ${cross.rt.iio.cflags}"/>
      <arg value="LINK=${crosstools.gcc} ${cross.rt.iio.ldflags}"/>
      <arg value="all"/>
    </exec>
  </target>

  <target name="compile-native-host" unless="cross.platform" >
    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="JDK_HOME=${platform.home}"/>
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="JFXIIO_CP=${jfxiio.classes.dir}"/>
      <arg value="all"/>
    </exec>
  </target>

  <target name="compile-native" depends="compile-native-host,compile-native-cross"/>

  <target name="clean-native" >
    <exec executable="make" dir="../javafx-iio-native" failonerror="true">
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="clean"/>
    </exec>
  </target>

</project>
