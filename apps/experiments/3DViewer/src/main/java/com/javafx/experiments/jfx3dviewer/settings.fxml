            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
        </GridPane>
      </content>
    </TitledPane>
  </expandedPane>
  <panes>
    <fx:reference source="x4" />
    <TitledPane fx:id="x2" animated="false" text="Lights">
      <content>
        <GridPane hgap="5.0" padding="$x3" styleClass="settings" vgap="5.0">
          <children>
            <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label maxWidth="1.7976931348623157E308" styleClass="settings-header" text="Camera Light" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
            <Label maxWidth="1.7976931348623157E308" styleClass="settings-header" text="Ambient" GridPane.columnIndex="0" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
