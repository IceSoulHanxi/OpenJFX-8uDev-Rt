<?xml version="1.0" encoding="UTF-8"?>
<project name="JavaFX apps" default="default" basedir=".">

    <import file="build-defs.xml"/>

    <target name="init">
    </target>

    <target name="default" depends="jfx-apps"
            description="Build samples under rt that are integrated into the build."/>

    <target name="jar-apps" depends="init">
        <ant dir="samples" target="jar-apps" inheritAll="false"/>
    </target>

    <target name="clean" depends="init">
        <ant dir="samples" target="clean" inheritAll="false"/>
    </target>

    <target name="jfx-apps" depends="jar-apps,dist-apps,copy-public-apps">
    </target>

    <target name="dist-apps">
        <ant dir="samples" target="dist-apps" inheritAll="false"/>
    </target>

    <target name="copy-public-apps">
       <!-- samples -->
       <mkdir dir="${jfx.public.ga-samples.dir}"/>
       <copy todir="${jfx.public.ga-samples.dir}">
          <fileset dir="${jfx.apps.dir}">
            <include name="ga-samples/Ensemble8.*" />
            <include name="ga-samples/**/Ensemble8/**" />
          </fileset>
       </copy>
    </target>

    <!-- Targets required by and used by the top repository build. -->
    <target name="jfx-clean"     depends="clean"/>
    <target name="jfx-test"/>
    <target name="jfx-full-test"/>
    <target name="jfx-deploy"/>
    <target name="jfx-clean-deploy"/>
    <target name="jfx-sdk-docs"/>
    <target name="jfx-sdk"/>
    <target name="jfx-clean-sdk"/>

</project>
