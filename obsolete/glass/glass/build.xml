<?xml version="1.0" encoding="UTF-8"?>

<project name="glass-java" default="default" basedir=".">

    <description>Builds, tests, and runs the project Glass (Java).</description>

    <import file="../../build-defs.xml"/>

    <property name="glass-java.build.dir" value="build"/>
    <property name="glass-java.class.dir" value="${glass-java.build.dir}/classes"/>
    <property name="glass-java.dist.dir" value="dist"/>
    <property name="glass-java.src.dir" value="src"/>

    <property name="glass-java.dist.jar" value="${glass-java.dist.dir}/glass.jar"/>

    <property name="jfx.logging.dir" value="${rt.dist.root.dir}/javafx-logging"/>
    <property name="jfx.logging.jar" value="${jfx.logging.dir}/dist/javafx-logging.jar"/>

    <condition property="needLens">
      <or>
         <isset property="isLinux"/>
         <isset property="isAndroid"/>
      </or>
    </condition>

    <target name="init">
        <mkdir dir="${glass-java.class.dir}" />
        <mkdir dir="${glass-java.dist.dir}" />
    </target>

    <target name="compile" depends="init">
        <javac compiler="modern" fork="true"
               source="1.7" target="1.7"
               srcdir="${glass-java.src.dir}" destdir="${glass-java.class.dir}"
               debug="${javac.debug}" deprecation="${javac.deprecation}"
               excludes="${exclude.swt.src}"
               includeantruntime="false">
            <exclude name="com/sun/glass/ui/swt/**" unless="swt.available"/>
            <compilerarg value="-XDignore.symbol.file" />
            <classpath>
               <path path="${jfx.logging.jar}"/>
               <path path="${jfx.accessible.jar}"/>
               <path path="${jfxrt.jar}"/>
               <path path="${swt.path}/swt.jar"/>
               <path path="${import.swt.jar}"/>
            </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <jar basedir="${glass-java.class.dir}" destfile="${glass-java.dist.jar}">
            <include name="com/sun/glass/**/*" />
            <exclude name="com/sun/glass/ui/accessible/mac/" unless="isMacOSX" />
            <exclude name="com/sun/glass/ui/accessible/win/" unless="isWindows" />
            <exclude name="com/sun/glass/events/mac/" unless="isMacOSX" />
            <exclude name="com/sun/glass/ui/gtk/" unless="isLinux" />
            <exclude name="com/sun/glass/ui/ios/" unless="isIOS" />
            <exclude name="com/sun/glass/ui/lens/" unless="needLens" />
            <exclude name="com/sun/glass/ui/mac/" unless="isMacOSX" />
            <exclude name="com/sun/glass/ui/win/" unless="isWindows" />
            <exclude name="com/sun/glass/ui/x11/" unless="isLinux" />
            <exclude name="com/sun/glass/ui/android/" unless="isAndroid" />
        </jar>
        <copy todir="${glass.dist.lib.dir}" flatten="true">
            <fileset file="${glass-java.dist.jar}"/>
        </copy>
    </target>

    <target name="default" depends="init,compile,jar" />

    <target name="clean">
        <delete dir="${glass-java.dist.dir}" />
        <delete dir="${glass-java.build.dir}" />
    </target>

</project>
