<?xml version="1.0" encoding="UTF-8"?>
<project name="prism-es2" default="all" basedir=".">

  <property name="prism-es2.platform.classes.dir" value="../prism-es2-x11/build/classes"/>

  <target name="compile-native">
    <exec executable="gnumake" dir="../prism-es2-native" failonerror="true">
      <arg value="JDK_HOME=${platform.home}"/>
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <env key="PRISMES2_CLASS_DIR" value="${prism-es2.classes.dir}"/>
      <env key="PRISMES2_PLATFORM_CLASS_DIR" value="${prism-es2.platform.classes.dir}"/>
      <env key="PRISM_DEP_CP" value="${prism-common.classes.dir}"/>
      <arg value="all"/>
    </exec>
  </target>

  <target name="clean-native">
    <exec executable="gnumake" dir="../prism-es2-native" failonerror="true">
      <arg value="DIST_DIR=${native.dist.dir}"/>
      <arg value="BUILD_DIR=${native.build.dir}"/>
      <arg value="clean"/>
    </exec>
  </target>

</project>
